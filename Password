
import time
passwordcracked = "0"
for i in range(4):
    if passwordcracked == "0":
        input_password = input("What's the password?: ")
        if input_password == ("HELLO WORLD"):
            print("You did it!")
            passwordcracked = "1"
            break
        else:
            if i == 0:
                print("you have 3 tries left")
                print("the password is commonly printed")
                time.sleep(0.3)
            if i == 1:
                print("you have 2 tries left!")
                print("the password has all caps")
                time.sleep(0.3)
            if i == 2:
                print("last try!")
                print("the password is always at the start of either a python or a lua code")
                time.sleep(0.3)
            if i == 3:
                time.sleep(1.3)
                print("you failed :( aw shucks! the code is 'HELLO WORLD'!")
                passwordcracked = "0"

